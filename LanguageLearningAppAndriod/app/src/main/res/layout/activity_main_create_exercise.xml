<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".create.MainCreateExercise">

    <Button
            android:layout_width="126dp"
            android:layout_height="53dp"
            android:background="@drawable/return_btn"
            android:textColor="#FFFFFF"
            android:textStyle="bold" android:textAllCaps="false"
            android:fontFamily="@font/dm_sans"
            android:text="@string/return_home"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="72dp" android:id="@+id/returnHomeButton"
            app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:text="Create New Exercise"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="116dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="30dp"
            android:textSize="34sp" android:textStyle="bold"
            android:fontFamily="@font/dm_sans" android:textColor="@color/black" android:textAlignment="textStart"
            android:layout_marginEnd="30dp" android:id="@+id/createMainTitle"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="318dp"
            android:layout_height="197dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="30dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="30dp"
            app:layout_constraintHorizontal_bias="0.466"
            android:layout_marginTop="136dp" app:layout_constraintTop_toBottomOf="@+id/createMainTitle">
        <Button
                android:text="@string/practice_grammar"
                android:layout_width="98dp"
                android:background="@drawable/blue_btn"
                android:layout_margin="5sp"
                android:layout_height="match_parent" android:layout_weight="1"
                android:fontFamily="@font/dm_sans" android:textStyle="bold" android:id="@+id/grammarCreateButton"
                android:textSize="16sp"/>

        <Button
                android:text="@string/practice_vocab"
                android:layout_width="wrap_content"
                android:background="@drawable/yellow_btn"
                android:layout_margin="5sp"
                android:layout_height="match_parent" android:layout_weight="1"
                android:fontFamily="@font/dm_sans" android:textStyle="bold" android:id="@+id/vocabCreateButton"
                android:textSize="16sp"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>