<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".learnGrammar.GrammarPracticeModeActivity">

    <Button
            android:layout_width="126dp"
            android:layout_height="53dp"
            android:background="@drawable/return_btn"
            android:textColor="#FFFFFF"
            android:textStyle="bold" android:textAllCaps="false"
            android:fontFamily="@font/dm_sans"
            android:text="@string/return_home"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="30dp"
            app:layout_constraintEnd_toEndOf="parent" android:id="@+id/modeReturnHomeButton"/>
    <TextView
            android:text="Practice Mode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="30dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="30dp" android:layout_marginEnd="30dp"
            app:layout_constraintEnd_toEndOf="parent" android:textSize="48sp" android:textColor="#000000"
            android:fontFamily="@font/dm_sans" android:textStyle="bold" android:id="@+id/textView18"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="327dp"
            android:layout_height="240dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="30dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="30dp"
            app:layout_constraintTop_toBottomOf="@+id/textView18" android:layout_marginTop="172dp"
            app:layout_constraintHorizontal_bias="1.0" android:id="@+id/linearLayout11">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                    android:text="@string/time_practice_mode"
                    android:layout_margin="5sp"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content" android:id="@+id/textView19" android:layout_weight="1"
                    android:fontFamily="@font/dm_sans" android:textStyle="bold" android:textColor="#000000"/>
            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5sp"
                    android:inputType="time"
                    android:ems="10"
                    android:id="@+id/timeTextField" android:layout_weight="1" android:fontFamily="@font/dm_sans"
                    android:textColor="#000000"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="80dp">
            <TextView
                    android:text="@string/numberQuestions_practice_mode"
                    android:layout_margin="5sp"
                    android:layout_width="110dp"
                    android:layout_height="57dp" android:id="@+id/textView20" android:layout_weight="1"
                    android:fontFamily="@font/dm_sans" android:textStyle="bold" android:textColor="#000000"/>
            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5sp"
                    android:inputType="number"
                    android:ems="10"
                    android:id="@+id/questionNumberTextField" android:layout_weight="1"
                    android:fontFamily="@font/dm_sans"
                    android:textColor="#000000"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="98dp">
            <TextView
                    android:text="@string/numberCorrect_practice_mode"
                    android:layout_margin="5sp"
                    android:layout_width="110dp"
                    android:layout_height="70dp" android:id="@+id/textView21" android:layout_weight="1"
                    android:fontFamily="@font/dm_sans" android:textStyle="bold" android:textColor="#000000"/>
            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5sp"
                    android:inputType="number"
                    android:ems="10"
                    android:id="@+id/correctNumberTextField" android:layout_weight="1"
                    android:fontFamily="@font/dm_sans"
                    android:textColor="#000000"/>
        </LinearLayout>
    </LinearLayout>
    <Button
            android:text="@string/start_practice"
            android:layout_width="146dp"
            android:layout_height="75dp" android:id="@+id/startPracticeButton"
            android:background="@drawable/blue_btn"
            android:layout_marginTop="60dp"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout11"
            android:fontFamily="@font/dm_sans" android:textSize="34sp"
            android:textStyle="bold" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/modeErrorTextView"
            android:layout_marginBottom="30dp"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout11"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:textColor="#E53935" android:textAlignment="center" android:textStyle="bold"/>
</androidx.constraintlayout.widget.ConstraintLayout>