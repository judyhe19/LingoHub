<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".authenticationActivities.LoginActivity" android:background="#00FFFFFF">
    <Button
            android:layout_width="280dp"
            android:layout_height="48dp"
            android:background="@drawable/btn_bg"
            android:text="@string/login_button"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout" android:layout_marginTop="40dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498" app:iconTint="#FFC107" android:textColor="#FFFFFF"
            android:textStyle="bold" android:fontFamily="@font/dm_sans"
            android:id="@+id/loginButton"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="310dp"
            android:layout_height="150dp" android:layout_marginEnd="50dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="50dp"
            app:layout_constraintHorizontal_bias="0.493"
            android:id="@+id/linearLayout" android:layout_marginTop="50dp"
            app:layout_constraintTop_toBottomOf="@+id/textView4">
        <TextView
                android:text="Email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textView7" android:textStyle="bold"
                android:textColor="#F85F6A" android:fontFamily="@font/dm_sans"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:ems="10"
                android:hint="@string/email_input" android:fontFamily="@font/dm_sans" android:id="@+id/loginEmail"/>
        <TextView
                android:text="Password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textView8" android:textStyle="bold"
                android:textColor="#F85F6A" android:fontFamily="@font/dm_sans"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:ems="10"
                android:hint="@string/password_input" android:fontFamily="@font/dm_sans"
                android:id="@+id/loginPassword"/>
    </LinearLayout>
    <TextView
            android:text="Login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView4"
            android:textStyle="bold" android:textSize="34sp"
            android:textColor="@color/black" android:shadowColor="#000000"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="52dp"
            android:fontFamily="@font/dm_sans"
            android:layout_marginTop="40dp" app:layout_constraintTop_toBottomOf="@+id/linearLayout4"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="243dp"
            android:layout_height="74dp" android:layout_marginEnd="100dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="100dp"
            app:layout_constraintHorizontal_bias="0.468" android:layout_marginBottom="28dp"
            app:layout_constraintBottom_toTopOf="@+id/textView4" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="50dp" android:id="@+id/linearLayout4">
        <ImageView
                android:layout_width="match_parent"
                android:layout_height="47dp" app:srcCompat="@android:drawable/ic_menu_edit"
                android:id="@+id/imageView" tools:srcCompat="@drawable/haticon"/>
        <TextView
                android:text="@string/app_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textView10" android:textAllCaps="false"
                android:textAlignment="center" android:fontFamily="@font/dm_sans" android:textStyle="bold"/>
    </LinearLayout>
    <Button
            android:text="@string/forgot_password"
            android:layout_width="133dp"
            android:layout_height="52dp"
            android:background="@drawable/return_btn"
            android:textColor="#FFFFFF"
            android:textAllCaps="false" app:layout_constraintStart_toStartOf="parent"
            android:fontFamily="@font/dm_sans"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="152dp"
            android:textStyle="bold" android:clickable="true"
            app:layout_constraintTop_toBottomOf="@+id/loginButton"
            android:layout_marginTop="50dp" android:id="@+id/forgotPasswordButton"
            app:layout_constraintEnd_toStartOf="@+id/loginRegisterButton" app:layout_constraintHorizontal_bias="0.289"/>
    <Button
            android:text="@string/register_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/return_btn"
            android:textColor="#FFFFFF"
            android:textAllCaps="false"
            android:fontFamily="@font/dm_sans"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="152dp"
            android:textStyle="bold" android:clickable="true"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toBottomOf="@+id/loginButton"
            android:layout_marginTop="50dp"
            android:id="@+id/loginRegisterButton" android:layout_marginEnd="40dp"/>
    <TextView
            android:text="Welcome Back!"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView2"
            android:fontFamily="@font/dm_sans" android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@+id/textView4" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="52dp" android:layout_marginBottom="30dp"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/loginError"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="200dp"
            android:layout_marginEnd="200dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.454" android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout" android:layout_marginBottom="10dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>