<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".learnGrammar.PracticeSessionActivity">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="364dp"
            android:layout_height="135dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/multipleChoicelinearLayout"
            app:layout_constraintHorizontal_bias="0.363"
            android:layout_marginTop="20dp" app:layout_constraintTop_toBottomOf="@+id/questionORResultTextView">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                    android:text="@string/choice_A"
                    android:layout_margin="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:layout_weight="1"
                    android:textAlignment="center" android:textSize="16sp" android:textStyle="bold"
                    android:textColor="#FFFFFF" android:background="@drawable/btn_bg"
                    android:id="@+id/sessionChoiceAText"/>
            <TextView
                    android:text="TextView"
                    android:layout_margin="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/aTextView" android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                    android:text="@string/choice_B"
                    android:layout_margin="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:layout_weight="1"
                    android:textSize="16sp" android:textAlignment="center" android:textStyle="bold"
                    android:textColor="#FFFFFF" android:background="@drawable/btn_bg"
                    android:id="@+id/sessionChoiceBText"/>
            <TextView
                    android:text="TextView"
                    android:layout_margin="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/bTextView" android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                    android:text="@string/choice_C"
                    android:layout_margin="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:layout_weight="1"
                    android:textSize="16sp" android:textAlignment="center" android:textStyle="bold"
                    android:textColor="#FFFFFF" android:background="@drawable/btn_bg"
                    android:id="@+id/sessionChoiceCText"/>
            <TextView
                    android:text="TextView"
                    android:layout_margin="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/cTextView" android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                    android:text="@string/choice_D"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:layout_weight="1"
                    android:layout_margin="5dp"
                    android:textSize="16sp" android:textAlignment="center" android:textStyle="bold"
                    android:textColor="#FFFFFF" android:background="@drawable/btn_bg"
                    android:id="@+id/sessionChoiceDText"/>
            <TextView
                    android:text="TextView"
                    android:layout_margin="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/dTextView" android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>
    <Button
            android:layout_width="126dp"
            android:layout_height="53dp"
            android:background="@drawable/return_btn"
            android:textColor="#FFFFFF"
            android:textStyle="bold" android:textAllCaps="false"
            android:fontFamily="@font/dm_sans"
            android:text="@string/return_home"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="100dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498" android:id="@+id/practiceSessionReturnHomeButton"/>
    <Button
            android:text="CHECK"
            android:background="@drawable/btn_bg"
            android:layout_width="164dp"
            android:layout_height="50dp" android:id="@+id/checkAnswerORfinishButton"
            android:layout_marginTop="28dp"
            app:layout_constraintTop_toBottomOf="@+id/answerEditTextTextMultiLine" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:textColor="#FFFFFF" android:textStyle="bold"
            android:textSize="16sp" android:fontFamily="@font/dm_sans" app:layout_constraintHorizontal_bias="0.497"/>

    <TextView
            android:text="[Question Number]"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/questionCountTextView"
            android:textColor="#000000" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:textAlignment="center" android:textSize="20sp"
            android:layout_marginTop="52dp" app:layout_constraintTop_toBottomOf="@+id/topicTextView"
            android:fontFamily="@font/dm_sans" app:layout_constraintHorizontal_bias="0.497"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/topicTextView"

            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="60dp" android:textSize="34sp"
            android:text="[Topic]" android:textColor="#000000" android:textStyle="bold"
            android:fontFamily="@font/dm_sans" app:layout_constraintHorizontal_bias="0.496"/>
    <EditText
            android:layout_width="240dp"
            android:layout_height="47dp"
            android:inputType="textMultiLine"
            android:gravity="start|top"
            android:ems="10"
            android:id="@+id/answerEditTextTextMultiLine"
            android:hint="Type answer" android:textAlignment="viewStart"
            android:textSize="10sp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:fontFamily="@font/dm_sans"
            app:layout_constraintHorizontal_bias="0.496" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/multipleChoicelinearLayout"/>
    <TextView
            android:text="[Question]"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/questionORResultTextView"
            android:textStyle="bold" android:textAlignment="center"
            android:textColor="#000000" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/questionCountTextView" android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:fontFamily="@font/dm_sans" app:layout_constraintHorizontal_bias="0.498"/>
    <TextView
            android:text="[time left]"
            android:layout_width="124dp"
            android:layout_height="32dp" android:id="@+id/timeLeftTextView"
            android:textSize="20sp" android:fontFamily="@font/dm_sans"
            android:textColor="#000000" android:textStyle="bold|italic" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="60dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="28dp"/>
    <TextView
            android:text="0"
            android:layout_width="28dp"
            android:layout_height="30dp" android:id="@+id/scoreTextView"
            android:textSize="20sp" android:fontFamily="@font/dm_sans"
            android:textColor="#000000" android:textStyle="bold|italic" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="60dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="20dp" android:textAlignment="center"/>
    <TextView
            android:text="# Correct:"
            android:layout_width="130dp"
            android:layout_height="24dp"
            android:textSize="20sp" android:fontFamily="@font/dm_sans"
            android:textColor="#000000" android:textStyle="bold" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="10dp"
            android:textAlignment="center" android:id="@+id/scoreTitle" android:layout_marginBottom="5dp"
            app:layout_constraintBottom_toTopOf="@+id/scoreTextView"/>
    <ProgressBar
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminate="true"
            android:id="@+id/progressBar" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/checkAnswerORfinishButton"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/answerFeedbackTextView"
            android:textColor="#88E53935" android:textStyle="bold"
            android:fontFamily="@font/dm_sans" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:textAlignment="center"
            android:textSize="14sp" app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintBottom_toTopOf="@+id/practiceSessionReturnHomeButton"
            android:layout_marginBottom="60dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>