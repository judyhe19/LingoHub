<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".authenticationActivities.LoginActivity" android:background="#00FFFFFF">
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/return_btn"
            android:textColor="#FFFFFF"
            android:textStyle="bold" android:textAllCaps="false" android:layout_marginEnd="48dp"
            app:layout_constraintEnd_toEndOf="parent" android:fontFamily="@font/dm_sans"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="100dp"
            android:layout_marginTop="103dp" app:layout_constraintTop_toBottomOf="@+id/resetButton"
            app:layout_constraintVertical_bias="0.496" android:text="@string/return_button"
            android:id="@+id/resetReturnButton"/>
    <Button
            android:layout_width="280dp"
            android:layout_height="48dp"
            android:background="@drawable/btn_bg"
            android:text="@string/reset_password"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout" android:layout_marginTop="40dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498" app:iconTint="#FFC107" android:textColor="#FFFFFF"
            android:textStyle="bold" android:fontFamily="@font/dm_sans" android:textAllCaps="false"
            android:clickable="true" android:id="@+id/resetButton"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="310dp"
            android:layout_height="200dp" android:layout_marginEnd="50dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="50dp"
            app:layout_constraintHorizontal_bias="0.493"
            android:id="@+id/linearLayout" android:layout_marginTop="50dp"
            app:layout_constraintTop_toBottomOf="@+id/textView4">
        <TextView
                android:text="Email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textView7" android:textStyle="bold"
                android:textColor="#F85F6A" android:fontFamily="@font/dm_sans"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:ems="10"
                android:hint="@string/email_input" android:fontFamily="@font/dm_sans"
                android:id="@+id/resetPasswordEmail"/>
        <TextView
                android:text="New Password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textView8" android:textStyle="bold"
                android:textColor="#F85F6A" android:fontFamily="@font/dm_sans"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:ems="10"
                android:hint="@string/password_input" android:fontFamily="@font/dm_sans"
                android:id="@+id/resetPassword"/>
        <TextView
                android:text="Confirm Password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textView3" android:textStyle="bold"
                android:textColor="#F85F6A" android:fontFamily="@font/dm_sans"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:ems="10"
                android:hint="@string/password_input" android:fontFamily="@font/dm_sans"
                android:id="@+id/confirmResetPassword"/>
    </LinearLayout>
    <TextView
            android:text="Reset Password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView4"
            android:textStyle="bold" android:textSize="34sp"
            android:textColor="@color/black" android:shadowColor="#000000"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="50dp"
            android:fontFamily="@font/dm_sans" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="100dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout"
            app:layout_constraintBottom_toTopOf="@+id/resetButton" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp" android:id="@+id/resetPasswordError" android:textColor="#E53935"/>

</androidx.constraintlayout.widget.ConstraintLayout>