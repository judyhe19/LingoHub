<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".learnGrammar.CustomGrammarPracticeTopicsActivity">
    <Button
            android:layout_width="126dp"
            android:layout_height="53dp"
            android:background="@drawable/return_btn"
            android:textColor="#FFFFFF"
            android:textStyle="bold" android:textAllCaps="false"
            android:fontFamily="@font/dm_sans"
            android:text="@string/return_home"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="30dp"
            app:layout_constraintEnd_toEndOf="parent" android:id="@+id/chooseTopicReturnHomeButton"/>
    <TextView
            android:text="Choose Topic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/topicTitle"
            android:textSize="48sp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="30dp" android:layout_marginEnd="30dp"
            app:layout_constraintEnd_toEndOf="parent" android:textAlignment="center"
            android:fontFamily="@font/dm_sans" android:textColor="#000000" android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="30dp"/>
    <ListView
            android:layout_width="338dp"
            android:layout_height="560dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="30dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="30dp"
            app:layout_constraintHorizontal_bias="0.6" android:layout_marginBottom="30dp"
            app:layout_constraintBottom_toTopOf="@+id/chooseTopicReturnHomeButton" android:id="@+id/topicsList"/>
</androidx.constraintlayout.widget.ConstraintLayout>